<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_akun">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/linear1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:ignore="MissingConstraints">

    <RelativeLayout
        android:id="@+id/kepala"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@drawable/nav">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/foto">
            <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:background="@drawable/foto"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"/>



        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/foto">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vra Widia Putri"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sijunjung"
                android:textStyle="normal"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+6282297768918"
                android:textStyle="normal"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/kiri"

    android:background="@drawable/coin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button


        android:id="@+id/klikme"
        android:layout_width="@dimen/_80sdp"
        android:background="@android:color/transparent"
        android:layout_height="@dimen/_30sdp"
        android:hint="Click Me!"
        android:textColorHint="@color/pink"
        android:textSize="@dimen/_9ssp"
        android:layout_centerVertical="true"

        />
</RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/coin"
        android:layout_toRightOf="@id/kiri">

        <ImageView

            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/hati"
            android:tint="@color/pink" />

    </RelativeLayout>
</RelativeLayout>

        </LinearLayout>



    </RelativeLayout>
</LinearLayout>

<!--    Linear2-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear2"
            android:layout_below="@+id/linear1"
            android:orientation="vertical" >


<!--            infoakun-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/akunkiri"
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_width="@dimen/_20sdp"
               android:layout_height="@dimen/_20sdp"
               android:layout_centerVertical="true"
               android:src="@drawable/akun"/>

            <Button
                android:layout_toRightOf="@+id/akunkiri"
                android:id="@+id/tbakun"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:hint="Info Akun"
                android:textAlignment="textStart"/>
                <ImageView

                    android:layout_below="@+id/tbakun"
                    android:background="@drawable/garisbawah"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"/>

            </RelativeLayout>
<!--            Hubungi-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/akunkiri2"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/cs"/>
                <Button
                    android:id="@+id/tbbantuan"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:hint="Pusat Layanan"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:textAlignment="textStart"/>
                <ImageView
                    android:layout_below="@+id/tbbantuan"
                    android:background="@drawable/garisbawah"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"/>

            </RelativeLayout>




        </LinearLayout>

</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>